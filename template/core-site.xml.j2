<!-- Put site-specific property overrides in this file. -->

<configuration>
  <!-- 指定hdfs的nameservice为namenode的名称 -->
  <property>
    <name>fs.default.name</name>
    <value>hdfs://{{ groups['hadoop-hdfs-namenode'][0] }}:9000</value>
  </property>

  <!-- 指定hadoop临时目录 -->
  <property>
    <name>hadoop.tmp.dir</name>
    <value>/opt/data/hadoop/data</value>
  </property>

  <!-- 指定zookeeper地址，为前一节配置的主机，端口2181，逗号分隔-->
  <property>
    <name>ha.zookeeper.quorum</name>
    <value>{% for item in groups['zookeeper'] %}{{ item }}:2181{{ '' if loop.last else ',' }}{% endfor %}</value>
  </property>

  <property>
    <name>dfs.permissions</name>
    <value>false</value>
  </property>

  <!--设置hadoop的缓冲区大小为128MB-->
  <property>
    <name>io.file.buffer.size</name>
    <value>131702</value>
  </property>
</configuration>