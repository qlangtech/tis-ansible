project.name=TIS

runtime={{runtime}}

tis.datasource.type={{tisconsole_db_type}}
tis.datasource.dbname={{tisconsole_db_dbname}}
{% if tisconsole_db_type == 'mysql' %}
tis.datasource.url={{tisconsole_db_url}}
tis.datasource.port={{tisconsole_db_port}}
tis.datasource.username={{tisconsole_db_username}}
tis.datasource.password={{tisconsole_db_password}}
{% endif %}

{% if uber_pkg %}
zk.host=127.0.0.1:2181/tis/cloud
assemble.host=127.0.0.1
tis.host=127.0.0.1
{% else %}
zk.host={{zk_host}}
assemble.host={{groups['assemble'][0]}}
tis.host={{groups['tis-console'][0]}}
{% endif %}



